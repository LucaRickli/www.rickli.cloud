---
const { pathname } = Astro.url;
const isActive = (r: RegExp) => r.test(pathname);
---

<footer
  aria-label="Site Footer"
  class="mt-auto bg-base-200 text-base-content py-6 w-full"
>
  <div class="px-3 sm:flex sm:items-center sm:justify-between">
    <nav aria-label="Footer Legal">
      <ul class="flex flex-wrap justify-center gap-4 text-xs lg:justify-end">
        <li>
          <a
            href="/impressum"
            class="text-gray-500 transition hover:opacity-75"
            class:list={[{ active: isActive(/^\/impressum\/?$/) }]}
          >
            Impressum
          </a>
        </li>

        <li>
          <a
            href="/datenschutz"
            class="text-gray-500 transition hover:opacity-75"
            class:list={[{ active: isActive(/^\/datenschutz\/?$/) }]}
          >
            Datenschutz
          </a>
        </li>
      </ul>
    </nav>

    <ul class="flex justify-center gap-6 mt-8 sm:mt-0 lg:justify-end">
      <li>
        <a
          href="https://github.com/lucarickli"
          rel="noreferrer"
          target="_blank"
          class="text-gray-700 transition hover:opacity-75"
        >
          <span class="sr-only">GitHub</span>

          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <title>GitHub</title>
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path>
          </svg>
        </a>
      </li>

      <li>
        <a
          href="/rss.xml"
          rel="noreferrer"
          target="_blank"
          class="text-gray-700 transition hover:opacity-75"
        >
          <span class="sr-only">RSS feed</span>

          <svg
            xmlns="http://www.w3.org/2000/svg"
            id="RSSicon"
            viewBox="0 0 8 8"
            class="w-6 h-6"
          >
            <title>RSS feed</title>
            <!-- <style type="text/css">
          .button {stroke: none; fill: orange;}
          .symbol {stroke: none; fill: white;}
        </style> -->
            <rect fill="currentColor" width="8" height="8" rx="1.5"></rect>
            <circle style="fill: hsl(var(--b2));" cx="2" cy="6" r="1"></circle>
            <path
              style="fill: hsl(var(--b2));"
              d="m 1,4 a 3,3 0 0 1 3,3 h 1 a 4,4 0 0 0 -4,-4 z"></path>
            <path
              style="fill: hsl(var(--b2));"
              d="m 1,2 a 5,5 0 0 1 5,5 h 1 a 6,6 0 0 0 -6,-6 z"></path>
          </svg>
        </a>
      </li>
    </ul>
  </div>
</footer>

<style scoped>
  .active {
    color: hsl(var(--p));
  }
</style>
