---
import Logo from "./Logo.astro";
import DrawerContent from "./DrawerContent.astro";
---

<header class="w-full fixed z-50 backdrop-blur-md top-0">
  <div class="navbar px-2 py-1">
    <div class="flex-none lg:hidden">
      <label for="main-nav" class="btn btn-square btn-ghost">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block w-6 h-6 stroke-current"
        >
          <title>Navigation</title>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <div class="flex-1" style="height: 40px;">
      <Logo style="margin: 9px 0" />
    </div>
    <div class="flex-none hidden lg:block">
      <ul class="menu menu-horizontal">
        <DrawerContent />
      </ul>
    </div>
  </div>
</header>
